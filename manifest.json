{
  "manifest_version": 3,
  "name": "Temiz Sözlük",
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": [
        "https://www.eksisozluk.com/**",
        "https://eksisozluk.com/**"
      ],
      "run_at": "document_end",
      "js": [
        "src/scripts/classifier.js",
        "src/scripts/detect.js"
      ],
      "css": [
        "src/styles/style.css"
      ]
    }
  ],
  "background": {},
  "permissions": [
    "unlimitedStorage",
    "storage",
    "activeTab"
  ],
  "action": {
    "default_icon": {
      "16": "/icons/16.png",
      "32": "/icons/32.png",
      "48": "/icons/48.png",
      "128": "/icons/128.png"
    }
  }
}